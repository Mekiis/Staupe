<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/staupe_bg_land"
    android:id="@+id/options_root"
    android:paddingTop="@dimen/marge_top"
    android:paddingRight="@dimen/marge_right"
    android:paddingBottom="@dimen/marge_bottom"
    android:paddingLeft="@dimen/marge_left" >

    <LinearLayout
        android:id="@+id/tutorial_ll_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_back_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_back"
            android:onClick="actionClick"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/tutorial_ll_back"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/tutorial_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/options_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/options_title"
                    android:textSize="@dimen/title"
                    android:gravity="center"/>

                <CheckBox
                    android:id="@+id/cb_activate_animations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/options_cb_activate_animations"
                    android:textSize="@dimen/text_Normal" />

                <CheckBox
                    android:id="@+id/cb_activate_optional_animations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/options_cb_activate_optional_animations"
                    android:textSize="@dimen/text_Normal" />

                <Button
                    android:id="@+id/btn_reinitialise_achievement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector"
                    android:onClick="actionClick"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/options_btn_reinitialise_achievements"
                    android:textSize="@dimen/text_Normal"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_reinitialise_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector"
                    android:onClick="actionClick"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/btn_reinitialise_stars"
                    android:textSize="@dimen/text_Normal"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Documents/PROGRAMMATION/STAUPE/GIT/ANDROID_PROJET/res/layout-land/options.xml -->