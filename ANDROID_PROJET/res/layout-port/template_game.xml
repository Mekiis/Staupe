<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

        <ScrollView
            android:id="@+id/game_sv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/game_btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/game_btn_check"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/selector_btn_back"
                        android:onClick="actionClick" />

                    <Button
                        android:id="@+id/game_btn_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/selector_btn_validate"
                        android:onClick="actionClick" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_normal"
                    android:gravity="center" >

                    <ImageButton
                        android:id="@+id/game_btn_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="actionReset"
                        android:src="@drawable/btn_reset" />

                    <ImageButton
                        android:id="@+id/game_btn_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="actionBest"
                        android:src="@drawable/btn_best" />

                    <ImageButton
                        android:id="@+id/game_btn_turn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="actionTurn"
                        android:src="@drawable/btn_turn" />

                    <LinearLayout
                        android:id="@+id/game_ll_bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_help"
                        android:gravity="center"
                        android:onClick="actionBonusShowTaupe" >

                        <ImageButton
                            android:id="@+id/game_btn_bonus_show_taupe_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="actionBonusShowTaupe"
                            android:src="@drawable/btn_help" />

                        <TextView
                            android:id="@+id/game_btn_bonus_show_taupe_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/game_tv_level_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Level"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title" />

                <RelativeLayout
                    android:id="@+id/game_rl_anim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/game_ll_level_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <GridLayout
                            android:id="@+id/game_grid_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:alignmentMode="alignMargins"
                            android:columnCount="3" >
                        </GridLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/game_ll_maul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:onClick="actionTurn"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/game_tv_maul_shape_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/maulShape"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_Normal" />

                    <GridLayout
                        android:id="@+id/game_grid_maul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:columnCount="3" >
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>