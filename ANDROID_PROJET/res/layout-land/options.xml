<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/staupe_bg_land"
    android:paddingTop="@dimen/marge_top"
    android:paddingRight="@dimen/marge_right"
    android:paddingBottom="@dimen/marge_bottom"
    android:paddingLeft="@dimen/marge_left" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/tutorial_ll_back" >

        <Button
            android:id="@+id/btn_back_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:onClick="actionClick"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/btn_retour"
            android:textSize="@dimen/text_Normal"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tutorial_ll_back"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/tutorial_scroll"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical|left"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/cb_activate_optional_animations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cb_activate_optional_animations"
                    android:textSize="@dimen/text_Normal" />

                <Button
                    android:id="@+id/btn_reinitialise_achievement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector"
                    android:onClick="actionClick"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/btn_reinitialise_achievements"
                    android:textSize="@dimen/text_Normal"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_reinitialise_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector"
                    android:onClick="actionClick"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/btn_reinitialise_stars"
                    android:textSize="@dimen/text_Normal"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>