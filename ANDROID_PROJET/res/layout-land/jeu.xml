<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/staupe_bg_land"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/marge_bottom"
    android:paddingLeft="@dimen/marge_left"
    android:paddingRight="@dimen/marge_right"
    android:paddingTop="@dimen/marge_top" >

    <LinearLayout
        android:id="@+id/jeu_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_back_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn_check_game"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/selector_btn_back"
                android:onClick="actionClick" />

            <Button
                android:id="@+id/btn_check_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/selector_btn_validate"
                android:onClick="actionClick" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_normal"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/game_btn_reset_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="actionReset"
                android:src="@drawable/btn_reset" />

            <ImageButton
                android:id="@+id/game_btn_best_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="actionBest"
                android:src="@drawable/btn_best" />

            <LinearLayout
                android:id="@+id/game_btn_bonus_show_taupe_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_help"
                android:gravity="center"
                android:onClick="actionBonusShowTaupe" >

                <ImageButton
                    android:id="@+id/game_btn_bonus_show_taupe_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="actionBonusShowTaupe"
                    android:src="@drawable/btn_help" />

                <TextView
                    android:id="@+id/game_btn_bonus_show_taupe_nb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/ScrollView00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/lay_jeu_taupe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|center_horizontal"
                    android:onClick="actionTurn"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/RelativeLayout01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        

                        <TextView
                            android:id="@+id/tv_maulShape"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/maulShape"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_Normal" />
                        
                        <ImageButton
                            android:id="@+id/ImageButton01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/tv_maulShape"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/selector_btn_rotate"
                            android:onClick="actionTurn" />
                    </RelativeLayout>

                    <GridLayout
                        android:id="@+id/gridTaupe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:columnCount="3" >
                    </GridLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jeu_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/jeu_left"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Level"
                android:textColor="@color/black"
                android:textSize="@dimen/title" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/game_rl_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/game_ll_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <GridLayout
                        android:id="@+id/grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alignmentMode="alignMargins"
                        android:columnCount="3" >
                    </GridLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/anim_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/case_none" />

</RelativeLayout>